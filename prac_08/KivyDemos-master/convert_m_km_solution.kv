BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: input_miles
        text: "0"
        font_size: 32
        multiline: False
        input_filter: 'float'
        on_text: app.handle_conversion(self.text)

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: "Up"
            on_press: app.handle_increment(input_miles.text, 1)

        Button:
            text: "Down"
            on_press: app.handle_increment(input_miles.text, -1)

    Label:
        text: f"{app.output_km} km"
        font_size: 32
        color: (1, 1, 0, 1)  # Yellow
